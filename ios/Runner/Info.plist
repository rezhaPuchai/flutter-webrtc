<!-- ios/Runner/Info.plist -->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- ========== BASIC APP INFO ========== -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>Conference Call</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>Conference Call</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleSignature</key>
    <string>????</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- ========== PERMISSIONS & PRIVACY DESCRIPTIONS ========== -->

    <!-- Camera Permission -->
    <key>NSCameraUsageDescription</key>
    <string>Video call requires camera access to capture video</string>

    <!-- Microphone Permission -->
    <key>NSMicrophoneUsageDescription</key>
    <string>Video call requires microphone access to capture audio</string>

    <!-- Background Modes untuk ongoing call -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
        <string>voip</string>
    </array>

    <!-- Push Notifications (jika butuh) -->
    <key>NSRemindersUsageDescription</key>
    <string>Video call notifications</string>

    <!-- Speech Recognition (optional) -->
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>Voice commands for video call controls</string>

    <!-- Local Network (untuk WebRTC discovery) -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>Video call requires local network access for peer-to-peer connection</string>

    <!-- Bonjour Services -->
    <key>NSBonjourServices</key>
    <array>
        <string>_flutterwebrtc._tcp</string>
        <string>_http._tcp</string>
    </array>

    <!-- ========== ORIENTATION SETTINGS ========== -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- ========== SECURITY & TRANSPORT ========== -->
    <!-- Allow arbitrary loads untuk development -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <!-- Atau spesifik domain saja -->
        <key>NSExceptionDomains</key>
        <dict>
            <key>signaling-websocket.payuung.com</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSTemporaryExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSTemporaryExceptionMinimumTLSVersion</key>
                <string>TLSv1.1</string>
            </dict>
        </dict>
    </dict>

    <!-- ========== FLUTTER CONFIG ========== -->
    <key>FLutterRoot</key>
    <string>$(FLUTTER_ROOT)</string>

    <!-- ========== VOIP CONFIGURATION ========== -->
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    </array>

	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
</dict>
</plist>
